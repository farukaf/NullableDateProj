<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.AboutPage"
             xmlns:vm="clr-namespace:App1.ViewModels"
             xmlns:controls="clr-namespace:App1.Controls"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Label>DatePicker</Label>
        <DatePicker Format="yyyy-MM-dd" />


        <Label>Nullable DatePicker</Label>
        <!--You can set or bind to NullableDate property-->
        <controls:NullableDatePicker 
            Placeholder="Tap Date" 
            Format="yyyy-MM-dd" 
            x:Name="dtPickerNull" />

        <Button Text="Clear Date" Clicked="Button_Clicked" />

        
        
    </StackLayout>

</ContentPage>
